{
  "name": "learn-the-web",
  "private": true,
  "devDependencies": {
    "cssnano": "^3.7.3",
    "onchange": "^2.5.0",
    "parallelshell": "^2.0.0",
    "postcss-assets": "^4.1.0",
    "postcss-cli": "^2.5.2",
    "postcss-cssnext": "^2.7.0",
    "postcss-import": "^7.1.3",
    "uglify-js": "^2.7.0"
  },
  "config": {
    "js_common": "js-src/toggle-nav.js js-src/heading-jumps.js js-src/video-home.js js-src/details.js",
    "js_topics": "js-src/fuzzy-match.js js-src/topic-search.js js-src/topics-visited.js",
    "js_article": "vendor/prism.js js-src/syntax.js js-src/article-nav.js js-src/section-links.js js-src/video.js vendor/fetch.js js-src/watch-stats.js",
    "js_course": "js-src/fullscreen.js",
    "js_slide-deck": "vendor/prism.js js-src/syntax.js js-src/slide-deck.js",
    "js_lesson": "vendor/prism.js js-src/syntax.js js-src/lesson.js",
    "js_assignment_viewer": "vendor/fetch.js vendor/js-yaml.min.js vendor/marked.min.js js-src/assignment-viewer.js"
  },
  "scripts": {
    "start": "parallelshell 'npm run start-server' 'npm run watch-css' 'npm run watch-js'",
    "start-server": "jekyll serve --incremental",
    "build-site": "jekyll build",
    "postcss": "postcss -u postcss-import -u postcss-cssnext --postcss-cssnext.browsers 'last 2 versions' -u postcss-assets -u cssnano",
    "build-css-main": "npm run postcss -- -o css/main.min.css css-src/main.css",
    "build-css-home": "npm run postcss -- -o css/main-home.min.css css-src/main-home.css",
    "build-css-topics": "npm run postcss -- -o css/main-topics.min.css css-src/main-topics.css",
    "build-css-article": "npm run postcss -- -o css/main-article.min.css css-src/main-article.css",
    "build-css-course": "npm run postcss -- -o css/main-course.min.css css-src/main-course.css",
    "build-css": "parallelshell 'npm run build-css-main' 'npm run build-css-home' 'npm run build-css-topics' 'npm run build-css-article' 'npm run build-css-course'",
    "watch-css": "onchange 'css-src/*.css' -- npm run build-css",
    "build-js-common": "uglifyjs $npm_package_config_js_common -c -m --lint -o js/common.min.js",
    "build-js-topics": "uglifyjs $npm_package_config_js_topics -c -m --lint -o js/topics.min.js",
    "build-js-article": "uglifyjs $npm_package_config_js_article -c -m --lint -o js/article.min.js",
    "build-js-course": "uglifyjs $npm_package_config_js_course -c -m --lint -o js/course.min.js",
    "build-js-slide-deck": "uglifyjs $npm_package_config_js_slide_deck -c -m --lint -o js/slide-deck.min.js",
    "build-js-lesson": "uglifyjs $npm_package_config_js_lesson -c -m --lint -o js/lesson.min.js",
    "build-js-assignment-viewer": "uglifyjs $npm_package_config_js_assignment_viewer -c -m --lint -o js/assignment-viewer.min.js",
    "build-js-font-source-code": "uglifyjs _includes/source-code-pro-observer.js -c -m --lint -o _includes/source-code-pro-observer.min.js",
    "build-js-font-alegreya": "uglifyjs _includes/alegreya-observer.js -c -m --lint -o _includes/alegreya-observer.min.js",
    "build-js": "parallelshell 'npm run build-js-common' 'npm run build-js-topics' 'npm run build-js-article' 'npm run build-js-course' 'npm run build-js-slide-deck' 'npm run build-js-lesson' 'npm run build-js-assignment-viewer' 'npm run build-js-font-source-code' 'npm run build-js-font-alegreya'",
    "watch-js": "onchange 'js-src/*.js' -- npm run build-js",
    "build": "npm run build-css && npm run build-js && npm run build-site",
    "deploy-site": "rsync --archive --recursive --delete --delete-excluded --progress --compress --chmod=u=rwX,go=rX ./_site/ keycdn:zones/learntheweb/",
    "deploy-solutions": "rsync --archive --recursive --delete --delete-excluded --progress --compress --chmod=u=rwX,go=rX ./_site/solutions/ thomasjbradley_acltwsolutions@nfsn:/fs8c/acltwsolutions/protected/includes",
    "deploy": "npm run deploy-site && npm run deploy-solutions",
    "build-n-deploy": "npm run build && npm run deploy"
  }
}
