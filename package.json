{
  "name": "learn-the-web",
  "private": true,
  "devDependencies": {
    "gulp": "^3.9.1",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.1",
    "gulp-postcss": "^6.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-uglify": "^1.5.3",
    "html-minifier": "git+https://github.com/kangax/html-minifier.git#gh-pages",
    "postcss-cssnext": "^2.3.0",
    "postcss-import": "^7.1.3"
  },
  "scripts": {
    "gulp": "gulp",
    "start": "npm run site-server",
    "site-server": "jekyll serve --incremental",
    "site-build": "jekyll build",
    "site-minify": "html-minifier --config-file .html-minifier.json --input-dir _site --output-dir _site",
    "assets-watcher": "gulp watch",
    "assets-build": "gulp build",
    "build": "npm run assets-build && npm run site-build",
    "deploy": "rsync --archive --recursive --delete --delete-excluded --progress --compress --chmod=u=rwX,g=rX ./_site/ keycdn:zones/learntheweb/",
    "build-n-deploy": "npm run build && npm run deploy"
  }
}
