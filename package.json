{
  "name": "learn-the-web",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^6.2.3",
    "gulp": "^3.9.0",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.0",
    "gulp-postcss": "^6.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-uglify": "^1.5.1",
    "postcss-cssnext": "^2.3.0",
    "postcss-import": "^7.1.3"
  },
  "scripts": {
    "gulp": "gulp",
    "site:server": "jekyll serve --incremental",
    "site:build": "jekyll build",
    "assets:watcher": "gulp watch",
    "assets:build": "gulp build",
    "build": "npm run assets:build && npm run site:build",
    "deploy": "rsync --archive --recursive --delete --delete-excluded --progress --compress --chmod=u=rwX,g=rX ./_site/ keycdn:zones/learntheweb/",
    "build-n-deploy": "npm run build && npm run deploy"
  }
